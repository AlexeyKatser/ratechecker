<div class="container" id='rate-form'>
	<%= render partial: 'partials/form_errors', locals: { model: currency } %>
	<%= form_for currency, remote: true do |f| %>
	  <div class="card-body">
	  	<div class="form-group">Курс:
	   	 	<%= f.number_field :value, class: 'form-control', placeholder: true, required: true, step: '0.0001', min: "0.0001", max: "10000" %>
	    </div>	  	
	    <div class="form-group">Действует до:
	    	<%= f.datetime_select :date,  class: 'form-control', required: true %>
	    </div>
	    <%= f.hidden_field :added_by, value: 1 %>
	  	<div class="actions mt-2">
	    	<%= f.submit 'Добавить', class: 'btn btn-primary' %> или <%= link_to 'вернуться', root_path %>
	  	</div>   	    
	  </div>
	<% end %>
</div>